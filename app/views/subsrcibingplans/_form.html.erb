<%= form_for(subsrcibingplan) do |f| %>
  <% if subsrcibingplan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subsrcibingplan.errors.count, "error") %> prohibited this subsrcibingplan from being saved:</h2>

      <ul>
      <% subsrcibingplan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class= "subsrcibform">
  <h1>New Subsrcibingplan</h1>
  <div class="subject-container">
   <%= f.label :name ,"SUBJECT",class:"subject" %>
    
    <%= f.radio_button :subject, 'ALL' %><%= f.label :name,"ALL" ,class:"subject-radio" %>
    <%= f.radio_button :subject, 'ICT ONLY' %><%= f.label :name,"ICT ONLY" ,class:"subject-radio" %>
  </div>

  <div class="features-container">
    <%= f.label :name ,"FEATURES(select at applicable)",class:"subject" %><br>
        <div class = "ck-button-pa">
           

           <div id="ck-button-pa1">
              <label>
                <%= check_box_tag 'subsrcibingplan[features][]','BUZZLE',checked('BUZZLE'),id:"select"%><span >BUZZLE</span>
              </label>
           </div>
           <div id="ck-button-pa2">
               <label>
                 <%= check_box_tag 'subsrcibingplan[features][]','THINKMATE',checked('THINKMATE'),class: "select_all" %><span>THINKMATE</span>
               </label>
           </div>
        

        </div>  
     
     

     <div class = "ck-button-ch">
          

          <div id="ck-button-ch1">
               <label>
                   <%= check_box_tag 'subsrcibingplan[features][]','PPG',checked('PPG'),class:"checkbox" %><span>PPG</span>
              </label>
          </div>
          <div id="ck-button-ch2">
              <label>
                   <%= check_box_tag 'subsrcibingplan[features][]','QPG',checked('QPG'),class:"checkbox" %><span>QPG</span>
              </label>
          </div>
      <div class = "last"> 
              <div id="ck-button-ch3">

               <label>
                  <%= check_box_tag 'subsrcibingplan[features][]','Assessment',checked('Assessment'),class:"checkbox" %><span>Assessment</span>
              </label>
              </div>
          <div id="ck-button-ch4">
              <label>
                   <%= check_box_tag 'subsrcibingplan[features][]','Reports',checked('Reports'),class:"checkbox",id:"last" %><span>Reports</span>
               </label>
         </div> 
        </div>
     

     </div>
  </div>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
